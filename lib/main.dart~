void main() async {
  WidgetsFlutterBinding.ensureInitialized();
  await Firebase.initializeApp(
    name: 'default',
    options: DefaultFirebaseOptions.currentPlatform,
  );

  await Firebase.initializeApp(
    name: 'stagging',
    options: DefaultFirebaseOptions.currentPlatform,
  );

  await Firebase.initializeApp(
      options: DefaultFirebaseOptions.currentPlatform,
  );

  // await FirebaseAppCheck.instance.activate(
  //   webProvider: ReCaptchaV3Provider('recaptcha-v3-site-key'),
  //   androidProvider: AndroidProvider.playIntegrity,
  //   appleProvider: AppleProvider.appAttest,
  // );

  await FirebaseAppCheck.instance.activate(
    // webProvider: ReCaptchaV3Provider('A2274CA0-A5D0-4B6D-83B1-32F13A07354B'),
    androidProvider: AndroidProvider.playIntegrity,  // وضع التصحيح أثناء التطوير
    appleProvider: AppleProvider.appAttest,
  );

  // FirebaseMessaging.instance.getToken().then((value) {
  //   print('token : ${value}');
  // });

  DatabaseHelper.instance;
  await Preferences.initPref();
  await addSampleBranchToVendor('LDsmHVuL2WlDiGR70clw', 'sample_branch_id1');
  runApp(
    const MyApp(),
  );
}
